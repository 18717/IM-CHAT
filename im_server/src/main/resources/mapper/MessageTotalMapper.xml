<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.li2n.im_server.mapper.MessageTotalMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.li2n.im_server.pojo.MessageTotal">
        <id column="id" property="id"/>
        <result column="mkey" property="mkey"/>
        <result column="send_username" property="sendUsername"/>
        <result column="receive_username" property="receiveUsername"/>
        <result column="message_content_type" property="messageContentType"/>
        <result column="content" property="content"/>
        <result column="file_url" property="fileUrl"/>
        <result column="send_time" property="sendTime"/>
        <result column="is_online" property="online"/>
        <result column="is_self" property="self"/>
    </resultMap>

    <resultMap id="UserWithMsgTotalResultMap" type="com.li2n.im_server.pojo.MessageTotal" extends="BaseResultMap">
        <!-- 用户信息表 -->
        <collection property="userInfo" ofType="com.li2n.im_server.pojo.UserInfo">
            <result column="avatar" property="avatar"/>
            <result column="nickname" property="nickname"/>
            <result column="gender" property="gender"/>
        </collection>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, mkey, send_username, receive_username, message_content_type, content, file_url, send_time, is_online, is_self
    </sql>

    <!-- 根据msgKey查询指定聊天记录 -->
    <select id="selectByMsgKey" resultMap="BaseResultMap">
        SELECT *
        FROM message_total msg
        WHERE msg.mkey = #{send}
           OR msg.mkey = #{receive}
        ORDER BY id ASC
    </select>

    <!-- 查询所有的聊天记录 -->
    <select id="selectAll" resultMap="BaseResultMap">
        SELECT *
        FROM message_total
        ORDER BY id ASC
    </select>

    <!-- 查询有关用户所有的消息记录 -->
    <select id="selectByUsername" resultMap="UserWithMsgTotalResultMap">
        SELECT
            message_total.*,
            user_info.avatar,
            user_info.nickname,
            user_info.gender
        FROM
            message_total,
            user_info
        WHERE
            ( message_total.send_username = #{username} AND user_info.username = message_total.receive_username )
           OR ( message_total.receive_username = #{username} AND user_info.username = message_total.send_username )
        ORDER BY
            message_total.send_time
    </select>

</mapper>
